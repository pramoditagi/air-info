<p style="color: green"><%= notice %></p>

<h1 class="board-title">Departures</h1>

<% if @flights.any? %>
  <table class="flight-board">
    <thead>
      <tr>
        <th>STD</th>
        <th>ETD</th>
        <th>Airline</th>
        <th class="tooltip-container">
          Flight No
          <span class="tooltip-icon">â“˜</span>
          <span class="tooltip-text">Click on flight number to view details, edit, or delete</span>
        </th>
        <th>Destination</th>
        <th>Status</th>
        <th>Gate</th>
      </tr>
    </thead>
    <tbody>
      <% @flights.each do |flight| %> 
        <tr>
          <td><%= flight.std.strftime('%H:%M') %></td>
          <td><%= flight.etd.strftime('%H:%M') %></td>
          <td><%= flight.airline %></td>
          <td><%= link_to flight.flight_no, flight_path(flight) %></td>
          <td><%= flight.destination %></td>  
          <td><%= status_badge(flight.status) %></td>
          <td><%= flight.gate %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="empty-state">
    <p>No upcoming flights found.</p>
    <p>All flights have departed or been completed.</p>
  </div>
<% end %>
